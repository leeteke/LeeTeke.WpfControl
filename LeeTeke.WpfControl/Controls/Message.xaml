<local:Window
    x:Class="LeeTeke.WpfControl.Controls.Message"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:leedep="clr-namespace:LeeTeke.WpfControl.Dependencies"
    xmlns:local="clr-namespace:LeeTeke.WpfControl.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syx="clr-namespace:System.Collections;assembly=System.Runtime"
    Width="330"
    Height="210"
    Background="{DynamicResource LeeBrush_Background2}"
    Closing="Window_Closing"
    ResizeMode="NoResize"
    TitleBackground="{DynamicResource LeeBrush_Background}"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="gridMain"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="icon"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="{StaticResource IconFontFamily}"
                FontSize="50"
                Foreground="{DynamicResource LeeBrush_YellowMicrosoft}"
                Visibility="Collapsed" />

            <local:ProgressRing
                x:Name="ring"
                Width="100"
                Height="40"
                Mode="Wating"
                Thickness="6"
                Visibility="Collapsed" />

            <ContentPresenter
                x:Name="content"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                TextElement.Foreground="{DynamicResource LeeBrush_Text}" />

            <StackPanel
                x:Name="btnPanle"
                Grid.Row="2"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal" />


        </Grid>

        <local:ProgressBar
            x:Name="loading"
            Grid.Row="1"
            Grid.Column="0"
            Height="8"
            Margin="5,0,2,5"
            VerticalAlignment="Bottom"
            Maximum="100"
            Mode="Loading"
            Visibility="Collapsed"
            Value="{Binding ProcessValue}" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            Width="35"
            Height="14"
            Margin="0,0,5,5"
            FontSize="12"
            Foreground="{DynamicResource LeeBrush_Text}"
            Text="{Binding ProcessValue, StringFormat={}{0}%}"
            Visibility="{Binding ElementName=loading, Path=Visibility}" />
    </Grid>


</local:Window>
