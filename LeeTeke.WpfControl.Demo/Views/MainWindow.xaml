<lee:Window
    x:Class="LeeTeke.WpfControl.Demo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lee="https://github.com/leeteke/LeeTeke.WpfControl"
    xmlns:local="clr-namespace:LeeTeke.WpfControl.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="window"
    Title="LeeTeke.WpfControl DEMO"
    Width="1024"
    Height="720"
    TitleHeight="30"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding ElementName=window, Path=TitleHeight}" d:Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--  内容  -->
        <StackPanel Grid.Row="1">

            <lee:TextBoxEx
                VerticalAlignment="Center"
                IsReadOnly="True"
                Placeholder="你好"
                Text="12313" />
            <Button
                Click="Button_Click_1"
                Content="切换"
                Style="{StaticResource LeeButton}" />
            <Button Click="Button_Click" Content="123" />
            <TabControl
                lee:ScrollViewerManager.BottomContent="111"
                lee:ScrollViewerManager.LeftContent="123123"
                lee:ScrollViewerManager.RightContent="111"
                lee:ScrollViewerManager.SlideEnabled="True"
                lee:TabItemManager.IsHeaderScroll="True"
                TabStripPlacement="Bottom">
                <TabItem Header="你好啊啊啊啊1" />
                <TabItem Header="你好啊啊啊啊2" />
                <TabItem Header="你好啊啊啊啊3" />
                <TabItem Header="你好啊啊啊啊4" />
                <TabItem Header="你好啊啊啊啊5" />
                <TabItem Header="你好啊啊啊啊6" />
                <TabItem Header="你好啊啊啊啊7" />
                <TabItem Header="你好啊啊啊啊8" />
                <TabItem Header="你好啊啊啊啊9" />
                <TabItem Header="你好啊啊啊啊10" />
                <TabItem Header="你好啊啊啊啊11" />
                <TabItem Header="你好啊啊啊啊12" />
            </TabControl>




            <lee:Navigation
                x:Name="nav"
                Height="150"
                lee:ScrollViewerManager.SlideEnabled="True"
                ShowScrollToButton="True">
                <lee:Navigation.ItemContxtMenuContent>
                    <Grid Height="200" Background="Red" />
                </lee:Navigation.ItemContxtMenuContent>
            </lee:Navigation>


            <lee:TextBoxEx
                Width="300"
                Height="35"
                CornerRadius="10"
                Mode="Password" />
            <CheckBox
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="15"
                Style="{StaticResource LeeSwitchTagCheckBox}">
                <lee:CheckBoxManager.CheckedContent>
                    <TextBlock FontFamily="{StaticResource IconFontFamily}" Text="&#xe708;" />
                </lee:CheckBoxManager.CheckedContent>
                <TextBlock FontFamily="{StaticResource IconFontFamily}" Text="&#xe706;" />

            </CheckBox>
        </StackPanel>

        <lee:MaskPanel x:Name="maskPanel" Grid.RowSpan="2" />
        <lee:NotifyBanner
            x:Name="notifyApp"
            Grid.Row="1"
            NotifySite="TopRight" />
        <lee:NotifyBanner
            x:Name="notifyDesktop"
            Grid.Row="1"
            NotifySite="BottomRight" />



    </Grid>
</lee:Window>
